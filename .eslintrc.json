{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "amd": true,
        "worker": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
		"no-console": "off",
		"no-mixed-spaces-and-tabs": "off"
    },
	"globals": {
		"VERSION": false
	}
}
